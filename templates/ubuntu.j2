user.network-config: |
  version: 1
  config:
    - type: physical
      name: eth0
      subnets:
        - type: dhcp
          ipv4: true
          control: auto
    - type: physical
      name: eth1
      subnets:
        - type: static
          ipv4: true
          address: "{{ ansible_host }}"
          netmask: 255.255.255.0
          control: auto
